<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gt.vidal.albacinema.BoletosFragment">

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:textSize="24sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:text="Cine"/>
    <RelativeLayout
        android:id="@+id/lytDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHeader">
        <LinearLayout
            android:id="@+id/imgContainer"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp">
            <ImageView
                android:id="@+id/imgPelicula"
                android:layout_marginTop="8dp"
                android:layout_width="90dp"
                android:layout_height="135dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgContainer"
            android:textSize="17sp"
            android:layout_margin="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:singleLine="false"
            android:text="Titulo"/>
        <TextView
            android:id="@+id/txtSala"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitulo"
            android:layout_toRightOf="@+id/imgSala"
            android:text="Sala"/>
        <ImageView
            android:id="@+id/imgSala"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/sala"
            android:layout_below="@+id/txtTitulo"
            android:layout_toRightOf="@+id/imgContainer"
            />
        <TextView
            android:id="@+id/txtAtributos"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSala"
            android:layout_toRightOf="@+id/imgAtributos"

            android:text="Atributos"/>

        <ImageView
            android:id="@+id/imgAtributos"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txtSala"
            android:layout_toRightOf="@+id/imgContainer"
            android:src="@drawable/atributos"
            />
        <TextView
            android:id="@+id/txtHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAtributos"
            android:layout_toRightOf="@+id/imgHora"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"
            android:text="Hora"/>
        <ImageView
            android:id="@+id/imgHora"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txtAtributos"
            android:layout_toRightOf="@+id/imgContainer"
            android:src="@drawable/watch"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/lstBoletos"
        android:layout_below="@+id/lytDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lstBoletos"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFF"
        android:text="Continuar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/lstBoletos"
        android:layout_toLeftOf="@+id/txtTotal"
        android:layout_alignBaseline="@+id/btnContinuar"
        android:text="Total: Q."/>
    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/lstBoletos"
        android:layout_alignBaseline="@+id/btnContinuar"
        android:layout_alignParentEnd="true"
        android:text="0.00"/>
</RelativeLayout>
