<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:animateLayoutChanges="true"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="4dp"
        android:animateLayoutChanges="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/imgContainer"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp">
            <ImageView
                android:id="@+id/imgPelicula"
                android:layout_marginTop="8dp"
                android:layout_width="83dp"
                android:layout_height="124dp"/>
            <TextView
                android:id="@+id/txtDuracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="180 min."
                android:gravity="center"
                android:layout_marginBottom="8dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgContainer"
            android:textSize="17sp"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:singleLine="false"
            android:text="Tituloooo"/>
        <TextView
            android:id="@+id/txtRating"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitulo"
            android:layout_toRightOf="@id/imgContainer"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/rounded_corder"
            android:layout_margin="8dp"
            android:text="PG13"/>
        <TextView
            android:id="@+id/txtGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitulo"
            android:layout_toRightOf="@+id/txtRating"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:text="Comedia"/>
            <TextView
                android:id="@+id/txtSinopsis"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRating"
                android:layout_toRightOf="@id/imgContainer"
                android:singleLine="false"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/btnExpand"

                android:text="Sinopsis"/>
            <ImageButton
                android:id="@+id/btnExpand"
                android:layout_width="35dp"
                android:layout_height="85dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="80dp"
                android:background="#0000"
                android:src="@drawable/expand"
                />
</RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>